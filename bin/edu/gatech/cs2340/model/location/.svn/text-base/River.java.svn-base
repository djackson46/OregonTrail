package edu.gatech.cs2340.model.location;

/**
 * Represents a river.
 * 
 * @author The Jetties
 * 
 */
public class River extends Location {
	/**
	 * 
	 */
	private static final long serialVersionUID = -6989208357127260036L;
	private int depth;

	/**
	 * Creates a river with the given name, climate, and depth.
	 * 
	 * @param name
	 *            The name of the river.
	 * @param depth
	 *            The depth of the river.
	 */
	public River(String name, int depth) {
		super(name);
		this.depth = depth;
	}
	
	public River(String name, int depth, int x, int y) {
		super(name, x, y);
		this.depth = depth;
	}

	public int getDepth() {
		return this.depth;
	}
}