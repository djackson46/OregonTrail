package edu.gatech.cs2340.model;

/**
 * Formalizes methods necessary to purchase an item, across different classes
 * 
 * @author Jon
 * 
 */
public interface Purchasable {
	/**
	 * Gets the price of an item
	 * 
	 * @return price
	 */
	public double getPrice();

	/**
	 * Gets the weight of an item
	 * 
	 * @return weight
	 */
	public double getWeight();

	/**
	 * Adds count to the total number of objects you have.
	 * 
	 * @param count
	 *            The number of new buyable objects to add.
	 */
	public void add(int count);

	public int getCount();
	
	public Purchasable clone();
}
